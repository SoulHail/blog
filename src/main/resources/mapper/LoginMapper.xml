<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.blog.mapper.LoginMapper">
    <resultMap id="baseMap" type="com.example.blog.vo.UserInfoVo">
        <result property="userId" column="user_id"/>
        <result property="userName" column="user_name"/>
        <result property="passWord" column="password"/>
        <result property="major" column="major"/>
        <result property="role" column="role"/>
    </resultMap>
    <select id="login" resultMap="baseMap">
  	  select user_id,user_name,password,major,role from at_user where user_id=#{userId} and password=#{password}
    </select>
</mapper>